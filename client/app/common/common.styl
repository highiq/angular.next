@import url(http://fonts.googleapis.com/css?family=Roboto)

$primaryColor = #4ca8a1     // baby blue
$accentColor = #a92159      // light purple
$bgColor = #efefef          // light grey
$darkBgColor = #57102c      // dark purple
$lightBgColor = #bcc747     // mustard
$lightTextColor = #f5f5f5   // white
$darkTextColor = #212121    // charcoal

body
  height 100%
  // browsers default to 16px for font-size,
  // so setting top-level font-size to 62.5%
  // scales 1rem to equal 10px.
  font 62.5% 'Lato', sans-serif
